
<h1 class='title'>TO DO </h1>
<h2  class='date'>Date: 28/10</h2>
<div class='col-12 todo-container'>
  <div class='col-lg-10 content-table'>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Detail</th>
          <th>Status</th>
          <th  class='action' colspan="2">Action</th>
        </tr>
      </thead>
      <% @todo.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.detail %></td>
        <% if task.status %>
        <td>done</td>
        <% else %>
        <td>doning</td>
        <%end%>
        <td class='action' ><%= link_to 'edit',edit_task_path(task) %></td>
        <td class='action'><%= link_to 'delete',task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </table>
    <br />
    <button class='.btn-primary new-task'><%= link_to 'New Task',new_task_path%></button>
  </div>
</div>


